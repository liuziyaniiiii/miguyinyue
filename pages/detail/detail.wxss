.detailContainer{
  background: rgba(0, 0,0,.3);
  width:100%;
  height: 100%;
  position: relative;
}
/*头部*/
.detailTop{
  width:450rpx;
  height: 450rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-225rpx);
  top: 10%;
}
.detailTop image{
  display: block;
  width:450rpx;
  height: 450rpx;
  border-radius: 50%;
}
/*中间区域*/
.detailMiddle{
  width:450rpx;
  height: 450rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-100rpx);
  top:60%;
  display: flex;
  flex-direction: column;
}
.detailMiddle .name{
  color: #fff;
  font-size: 40rpx;
  font-weight: 700
}
.detailMiddle .author{
  /* text-align: center; */
  color: #ccc;
  margin-left: 30px;
  margin-top: 20rpx;
}
/*进度条区域*/
.audioControl{
  display: flex;
  width:640rpx;
  height: 80rpx;
  /*border: 1px solid red;*/
  position: absolute;
  bottom: 170rpx;
  left: 5%;
  line-height: 80rpx;
}
/*总进度条*/
.barControl{
  width:450rpx;
  height: 4rpx;
  margin: auto;
  background: rgba(0,0,0,.3);
  border-radius: 2rpx;
  position: relative;
}
/*实时进度条*/
.audioItem{
  height: 4rpx;
  width: 200rpx;
  background: red;
  position: absolute;
  left: 0;
  top: 0;
}
/*小圆点*/
.audioCircle{
  width:12rpx;
  height: 12rpx;
  background: #ffffff;
  border-radius: 50%;
  position: absolute;
  right: -12rpx;
  top: -4rpx;
}

/* 底部控制区域 */
/* musicControl */
.musicControl {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #fff;
}

.musicControl text {
  width: 20%;
  text-align: center;
  font-size: 50rpx;
  color: #fff;
  height: 120rpx;
  line-height: 120rpx;
}
.musicControl text.big {
  font-size: 80rpx;
}