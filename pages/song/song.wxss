  /*-webkit-line-clamp: 1;*/
  /*-webkit-box-orient: vertical;*/
  /*word-break: break-all;*/
  /*word-wrap: break-word;*/
  display: block;
  write-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.songItem .itemRight{
  position: absolute;
  right: 10%;
  top: 30%;
}
.songItem .itemRight .iconfont{
  font-size: 50rpx;
  color: #ccc
}
.songItem .itemRight .icon-sandian{
  margin-left: 20rpx
}
.songItem .itemLeft .singer{
  color: #cccccc;
}