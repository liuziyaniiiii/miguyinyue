/* 头部 */
 .listTop{
  padding: 30rpx;
}
.listTop .topUp{
  display: flex;
  margin-bottom: 20rpx;
}
.listTop .topUp .upItem{
  height: 60rpx;
  line-height: 60rpx;
  width: 25%;
  background-color: #ccc;
  border-radius: 30rpx;
  margin-left: 20rpx;
  text-align: center;
}
.listTop .topDown{
  text-align: center;
  background-color: #ccc;
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.listTop .topDown .iconfont{
  color: #333;
  margin-right: 10rpx
}
/*精选歌单*/
.choiceList{
  margin-top: 20rpx;
}
.choiceList .choiceTop{
  padding:0 20rpx 20rpx 20rpx;
}
/*精选歌单的内容*/
.choiceContent{
  display: flex;
  flex-wrap: wrap;
}
.choiceItem{
  width: 50%;
  display: flex;
  flex-direction: column;
}
.choiceItem image{
  width:366rpx;
  height: 366rpx;
}
.choiceList .disc{
  margin-left: 20rpx;
}
.choiceItem .author{
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #cccccc;
}
/* 加载更多 */
.more{
  background: #ccc;
  text-align: center;
  border-radius: 30rpx;
  margin: 30rpx 20rpx 20rpx 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}